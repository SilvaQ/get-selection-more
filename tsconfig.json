{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strictNullChecks": false,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types",
      "test/typings"
    ],
  },
  "include": [
    "src"
  ]
}
